{
  "productName": "Sparta",
  "version": "0.0.1",
  "identifier": "com.sparta.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist/spa"

  },
  "app": {
    "windows": [
      {
        "title": "Sparta",
        "width": 1024 ,
        "height": 768
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
        "resources/audio/*",
        "resources/gate.json",
        "resources/cctv_config.json",
        "resources/python-embed/**/*",
        "scripts/ffmpeg/*"
      ]
  }
}
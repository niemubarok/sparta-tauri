# Environment Configuration for Exit Gate System

# Server Configuration
PORT=3000
NODE_ENV=development
HOST=0.0.0.0

# Database Configuration
COUCHDB_URL=http://admin:password@localhost:5984
DATABASE_NAME=parking_system
LOCAL_DB_NAME=exit_gate_local

# GPIO Configuration
GATE_GPIO_PIN=24
LED_GPIO_PIN=25
GPIO_ACTIVE_HIGH=true

# Gate Control Settings
GATE_AUTO_CLOSE_TIME=10
GATE_PULSE_DURATION=500
GATE_TEST_DURATION=3

# Camera Configuration
PLATE_CAMERA_IP=192.168.1.100
PLATE_CAMERA_USERNAME=admin
PLATE_CAMERA_PASSWORD=admin123
PLATE_CAMERA_PORT=80
PLATE_CAMERA_RTSP_PORT=554

DRIVER_CAMERA_IP=192.168.1.101
DRIVER_CAMERA_USERNAME=admin
DRIVER_CAMERA_PASSWORD=admin123
DRIVER_CAMERA_PORT=80
DRIVER_CAMERA_RTSP_PORT=554

# Audio Configuration
ENABLE_AUDIO=true
AUDIO_VOLUME=80
SOUND_SUCCESS_FILE=sounds/success.wav
SOUND_ERROR_FILE=sounds/error.wav
SOUND_SCAN_FILE=sounds/scan.wav

# System Configuration
DEBUG_MODE=true
LOG_LEVEL=info
MAX_LOG_FILES=5
AUTO_BACKUP_ENABLED=true

# Security Settings
API_RATE_LIMIT=100
SESSION_SECRET=your-secret-key-here
CORS_ORIGIN=*

# Network Configuration
WIFI_SSID=ParkingSystem
WIFI_PASSWORD=parking123
ETHERNET_IP=192.168.1.100
ETHERNET_GATEWAY=192.168.1.1
